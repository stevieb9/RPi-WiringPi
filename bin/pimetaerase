#!/usr/bin/env perl

use warnings;
use strict;

use Data::Dumper;
use RPi::WiringPi;
use RPi::Const qw(:all);

my $pi = RPi::WiringPi->new(label => 'pimeta');

my %meta = %{ $pi->meta_fetch };
delete $meta{objects}{$pi->uuid};
$meta{object_count}--;

print "\nBEFORE ERASE:\n\n";
print Dumper \%meta;

$pi->meta_store({});

print "\n\nAFTER ERASE:\n\n";
print Dumper $pi->meta_fetch;

$pi->cleanup;

